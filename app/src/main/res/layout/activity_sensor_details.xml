<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".SensorDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <!-- Heading -->
            <TextView
                android:id="@+id/sensor_details_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_sensor_details_title"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Content -->
            <TextView
                android:id="@+id/sensor_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp" />


            <!-- Heading -->
            <TextView
                android:id="@+id/sensor_value_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_sensor_value_title"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />


            <!-- Content -->
            <TextView
                android:id="@+id/sensor_values"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>